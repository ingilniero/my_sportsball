|<!DOCTYPE html>
html
  head
    meta charset="utf-8"
    meta name="viewport" content="width=device-width, initial-scale=1.0"

    title Sportsball App

    = javascript_include_tag "app_component/application"
    = stylesheet_link_tag    "app_component/application", media: "all"

    = csrf_meta_tags

  header
    .contain-to-grid.sticky
      nav.top-bar data-topbar="" role="navigation"
        ul.title-area
          li.name
            h1
              = link_to('/') do

                = image_tag "app_component/logo.png", width: "25px"

                | Predictor

          li.toggle-topbar.menu-icon
            a href="#"
              span Menu

        section.top-bar-section
          ul.left
            li =link_to "Teams", '/app_component/teams'
            li =link_to Rails.application.config.main_nav[:games][:name], Rails.application.config.main_nav[:games][:link].call
            li =link_to "Predictions", '/app_component/predictions/new'

  main
    .row
      .small-12.columns
        = yield
